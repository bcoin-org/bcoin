{
  "tags": {
    "allowUnknownTags": true
  },
  "source": {
    "include": ["README.md", "lib/"],
    "exclude": [],
    "includePattern": ".+\\.js(doc)?$",
    "excludePattern": "(^|\\/|\\\\)_"
  },
  "plugins": ["plugins/markdown"],
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false
  },
  "opts": {
    "template": "templates/default",
    "encoding": "utf8",
    "destination": "./docs/reference",
    "recurse": true,
    "private": true,
    "pedantic": true
  }
}
