#!/usr/bin/env node

'use strict';

process.title = 'bcoin-wallet';

const server = require('../lib/wallet/server');

const wdb = server.create({
  config: true,
  argv: true,
  env: true,
  logFile: true,
  logConsole: true,
  logLevel: 'debug',
  db: 'leveldb'
});

process.on('unhandledRejection', (err, promise) => {
  throw err;
});

wdb.open().catch((err) => {
  throw err;
});
